---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import React from "./icons/React.astro";
import Css from "./icons/Css.astro";
import Php from "./icons/Php.astro";
import WordPress from "./icons/WordPress.astro";
import Sql from "./icons/Sql.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-[#61dafb] text-black",
    icon: React,
  },
  CSS: {
    name: "Css",
    class: "bg-[#61dafb] text-black",
    icon: Css,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#777BB4] text-white",
    icon: Php,
  },
  WORDPRESS: {
    name: "WordPress",
    class: "bg-[#21759B] text-white",
    icon: WordPress,
  },
  SQL: {
    name: "SQL",
    class: "bg-[#00AEEF] text-black",
    icon: Sql,
  },
};
const PROJECTS = [
  {
    title: "Estudio Froment & Asociados Website",
    description:
      "The Estudio Froment & Asoc website is a WordPress-based platform developed with PHP and MySQL, integrating a custom member validation system and DNI field for secure user verification. The project included database schema optimization, backend data validation, and SEO improvements to enhance site performance and visibility.",
    link: "https://estudiofroment.kensiweb.com",
    github: null,
    image: "/estudiofroment.webp",
    tags: [TAGS.WORDPRESS, TAGS.PHP, TAGS.SQL, TAGS.CSS],
  },
  {
    title: "Ilón Shelter Booking Platform ",
    description:
      "Ilón Shelter Booking Platform is a WordPress-based web application built with PHP, CSS, and phpMyAdmin for database management. It allows visitors to book accommodations at the Ilon Mountain Refuge, located near Laguna Ilon. The platform provides an easy-to-use interface for managing reservations, viewing availability, and streamlining the booking process for both guests and administrators.",
    link: "https://refugioilon.com.ar",
    github: null,
    image: "/refugioilonweb.webp",
    tags: [TAGS.WORDPRESS, TAGS.PHP, TAGS.SQL, TAGS.CSS],
  },
  {
    title: "Radio Intima Online",
    description:
      "Radio Íntima Online is a streaming platform developed to manage live audio broadcasts and dynamic content updates. The system integrates a relational database for scheduling, program metadata, and listener interaction tracking. Optimizations focused on data consistency, backend performance, and seamless media playback across devices.",
    link: "https://intimaonline.com",
    github: null,
    image: "/intimaonline.webp",
    tags: [TAGS.WORDPRESS, TAGS.PHP, TAGS.SQL, TAGS.CSS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <a href={link} target="_blank" rel="noopener noreferrer">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
              <img
                alt="Project image"
                class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-105"
                src={image}
              />
            </div>
          </a>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-200">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            {}

            <div class="mt-2 text-gray-700 dark:text-gray-300">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Link
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
